<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueDark"
    tools:context=".fragments.AddPostFragment">


    <EditText
        android:id="@+id/et_doctor_add_post_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/position_post"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/enter_post_title"
        android:inputType="text"
        android:padding="10dp" />

    <TextView
        android:id="@+id/position_post"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <EditText
        android:id="@+id/et_doctor_add_post_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/position_post"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/enter_post_details"
        android:inputType="textMultiLine"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_doctor_add_post_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_shape"
        android:padding="10dp"
        android:text="@string/done" />
</RelativeLayout>